<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">
    <ProgressBar
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/progress_bar_saveapp"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp" />



    <LinearLayout
        android:id="@+id/ll_inner_form"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_fbapps_id"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert your app id"/>
        <EditText
            android:id="@+id/et_fbapps_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_save_app_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes, Save App"
                android:layout_marginBottom="16dp"/>
            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_save_app_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>